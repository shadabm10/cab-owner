<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/app_button_black1"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="Pay Via Paytm"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_with_white"
        android:layout_margin="10dp"
        >


        <EditText
            android:id="@+id/edt_payee_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:maxLength="10"
            android:inputType="number"
            android:hint="Enter Mobile Number"
            />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_pay_paytm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:text="Pay Via Paytm"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></RelativeLayout>


</LinearLayout>